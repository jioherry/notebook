<%= form_for @topic do |f| %>

   <%= f.label :title, "Title" %>
   <%= f.text_field :title %>

   <%= f.label :description, "Description" %>
   <%= f.text_area :description %>

   <%= f.label :file_location, "File Location" %>
   <%= f.text_field :file_location %>

   <%= f.submit "Update" %>
   
<% end %>

