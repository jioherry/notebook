<%= form_for @topic, :url => topics_path do |f| %>

	<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>

	<%= f.label :title, "標題" %>
  <%= f.text_field :title %>

  <%= f.label :description, "敘述" %>
  <%= f.text_area :description %>

	<%= f.label :file_location, "檔案" %>
	<%= f.text_field :file_location %>

  <%= f.submit %>

<% end %>

<%= link_to '回首頁', topics_path %>
