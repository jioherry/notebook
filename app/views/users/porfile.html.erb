<h1><%= current_user.porfile %></h1>

<%= current_user.nickname %>

<%= form_for current_user do |f| %>

 	<%= f.label :email %>
  <%= f.email_field :email %>

<% end %>

<p>文章</p>

<% current_user.topics.each do |topic| %>

	<%= topic.title %>

	<%= link_to 'edit', edit_topic_path(topic) %>

<% end %>

<p>回覆</p>

<% current_user.comments.each do |comment| %>

	<%= comment.content %>

<% end %>

<p><%= link_to '回首頁', topics_path %></p>
